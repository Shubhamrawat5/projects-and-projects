<%- include('../partials/start-container') %>
<h1 class="text-center">New Campground</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" id="main-form">
            <div class="mb-2">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="campground[title]" id="title" class="form-control" required>
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="campground[location]" id="location" class="form-control" required>
            </div>
            <div class="mb-2">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" step="0.01" min="0" name="campground[price]" class="form-control" id="price" required>
                </div>
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">Description</label>
                <textarea name="campground[description]" id="description" class="form-control" required></textarea>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Images</label>
                <input type="file" name="image" class="form-control" id="image" multiple required>
                <label class="form-label">Max file size: 10MB</label>
            </div>
            <div>
                <button class="btn btn-success">Submit</button>
                <a href="/campgrounds" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
</div>
<script src="/minified/js/fileSizeLimit.js"></script>
<script>
    const navNewCampground = document.querySelector('#nav-new-campground');
    navNewCampground.classList.add('active');
</script>
<%- include('../partials/end-container') %>