<%- include('../partials/start-container') %> <h1>My Campgrounds</h1> <div class="row"> <% for(let campground of user.campgrounds){ %> <div class="col-12 col-xl-3"> <div class="card mb-2"> <div class="row g-0"> <div class="col-md-4 col-xl-12"> <img src="<%=campground.image[0].path%>" class="img-fluid card-img-top"> </div> <div class="col-md-8 col-xl-12"> <div class="card-body"> <h2 class="h5"><%=campground.title%></h2> <p><%=campground.description.substr(0,140)%> ...</p> <p class="text-muted"><%=campground.location%></p> <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View</a> </div> </div> </div> </div> </div> <% } %> </div> <%- include('../partials/end-container') %>